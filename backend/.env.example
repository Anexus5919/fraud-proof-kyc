# Database - Use Neon PostgreSQL (free tier)
# Sign up at https://neon.tech and create a database
# Enable pgvector extension: CREATE EXTENSION IF NOT EXISTS vector;
DATABASE_URL=postgresql+asyncpg://username:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Cloudinary (optional - for image storage)
# Sign up at https://cloudinary.com for free tier
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS - Allow frontend origins
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Thresholds
SPOOF_THRESHOLD=0.55
DUPLICATE_THRESHOLD=0.4
